<h1>難読地名いちらん</h1>
<button class='top'><a href='<%= uri('/quizzes/new') %>'>追加</a></button>
<ul class='quizzes-list'>
  <% quizzes.each do |quiz| %>
    <li class='quiz'>
      <a href='/quizzes/<%= quiz.id %>/edit'>
        <ruby class='name'>
          <span class='kanji'><%= quiz.kanji %></span>
          <rt><%= quiz.kana %></rt>
        </ruby>
      </a>
      <span class='prefecture'><%= quiz.prefecture %></span>
      <span class='level'>Lv.<%= quiz.level %></span>
      <span class='hint'><%= quiz.hint %></span>
      <p class='description'><%= quiz.description %></p>
    </li>
  <% end %>
</ul>
